@page "/1"

<div class="medical-container">
    <!-- Main Grid Layout -->
    <div class="main-grid">

        <!-- Left Column -->
        <div class="left-column">

            <!-- Patient Information Card -->
            <div class="compact-card">
                <div class="card-header">
                    <span>👤</span>
                    <h3>Patient Information</h3>
                </div>
                <div class="compact-form">
                    <div class="form-row">
                        <div class="input-group">
                            <label>Gender</label>
                            <select class="form-input">
                                <option value="Male">Male</option>
                                <option value="Female">Female</option>
                            </select>
                        </div>
                        <div class="input-group">
                            <label>Age</label>
                            <input type="number" class="form-input" placeholder="Age" value="45">
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="input-group search-group">
                            <label>Patient Name</label>
                            <div class="search-container">
                                <span class="search-icon">🔍</span>
                                <input type="text" class="form-input" placeholder="Search patient..." value="John Doe">
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Address Card -->
            <div class="compact-card">
                <div class="card-header">
                    <span>📍</span>
                    <h3>Address</h3>
                </div>
                <textarea class="form-textarea" rows="3">123 Medical Street</textarea>
            </div>

            <!-- Visit Signs Card -->
            <div class="compact-card">
                <div class="card-header">
                    <span>❤️</span>
                    <h3>Visit Signs</h3>
                </div>
                <div class="vitals-grid">
                    <div class="vital-item">
                        <label>FBS</label>
                        <input type="number" class="form-input" value="100">
                    </div>
                    <div class="vital-item">
                        <label>BP</label>
                        <input type="text" class="form-input" value="120/80">
                    </div>
                    <div class="vital-item">
                        <label>Pulse</label>
                        <input type="number" class="form-input" value="72">
                    </div>
                    <div class="vital-item">
                        <label>Weight</label>
                        <input type="number" class="form-input" value="75">
                    </div>
                </div>
            </div>
        </div>

        <!-- Center Column -->
        <div class="center-column">

            <!-- Medicine Prescription Card -->
            <div class="compact-card">
                <div class="card-header-with-template">
                    <div class="header-left">
                        <span>💊</span>
                        <h3>Medicine Prescription</h3>
                    </div>
                    <div class="template-search">
                        <div class="search-container">
                            <span class="search-icon">🔍</span>
                            <input type="text" class="form-input template-input" placeholder="Search templates...">
                        </div>
                    </div>
                </div>

                <div class="medicine-controls">
                    <div class="input-group">
                        <div class="search-container">
                            <span class="search-icon">🔍</span>
                            <input type="text" class="form-input" placeholder="Search medicine">
                        </div>
                    </div>
                    <div class="input-group">
                        <select class="form-input">
                            <option value="">Select Date</option>
                            <option value="today">Today</option>
                        </select>
                    </div>
                    <div class="input-group">
                        <input type="text" class="form-input" placeholder="Schedule" value="1-0-1">
                    </div>
                    <button class="btn btn-primary btn-small">
                        <span>+</span>
                        Add
                    </button>
                </div>

                <!-- Medicine Table -->
                <div class="table-container">
                    <table class="data-table">
                        <thead>
                            <tr>
                                <th>Medicine</th>
                                <th>Dose</th>
                                <th>Schedule</th>
                                <th class="action-col">Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>Vitamin C</td>
                                <td>100mg</td>
                                <td>1-1-0</td>
                                <td>
                                    <button class="icon-btn danger" title="Delete">
                                        🗑️
                                    </button>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <!-- Right Column -->
        <div class="right-column">

            <!-- Patient Complaints Card -->
            <div class="compact-card">
                <div class="card-header">
                    <span>🤒</span>
                    <h3>Patient Complaints</h3>
                </div>
                <div class="complaints-controls-simple">
                    <div class="input-group">
                        <div class="search-container">
                            <span class="search-icon">🔍</span>
                            <input type="text" class="form-input" placeholder="Search complaints...">
                        </div>
                    </div>
                    <button class="btn btn-primary btn-small">
                        <span>+</span>
                        Add
                    </button>
                </div>
                <div class="table-container small-table">
                    <table class="data-table">
                        <thead>
                            <tr>
                                <th>Complaint</th>
                                <th>Duration</th>
                                <th>Severity</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>High Fever</td>
                                <td>2 days</td>
                                <td>Severe</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>

            <!-- Actions Card -->
            <div class="compact-card">
                <div class="card-header">
                    <span>⚡</span>
                    <h3>Actions</h3>
                </div>
                <div class="action-buttons-compact">
                    <button class="btn btn-success btn-compact">
                        <span>💾</span>
                        Save
                    </button>
                    <button class="btn btn-primary btn-compact">
                        <span>🖨️</span>
                        Print
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>